--display all from stars database.
SELECT * FROM stars;


--who are the actors name whos movie rating is greater than 6 and what are there movies?
SELECT s.first_name, s.last_name, movie, rate AS movie_rating FROM stars AS s
JOIN leading_role 
ON s.id = leading_role.stars_id
WHERE movie_rating > 6;


 --what are the actors name, instagram, and movies they are in as the leading role also what is the movie rating of that movie?
SELECT s.first_name, s.last_name, s.instagram, leading_role.movie, leading_role.rate AS movie_rating FROM stars AS s
    JOIN leading_role
    ON s.id = leading_role.stars_id;
    
    
  --what are the actors name and what are there hobbies?  
SELECT s.first_name, s.last_name, h.name AS hobbie FROM stars AS s
    JOIN hobbies AS h
    ON s.id = h.person_id;
